{
  "name": "corex-ui",
  "private": true,
  "description": "A modern, accessible UI component system built with TypeScript and Zag.js. Framework-agnostic, unstyled by default, and flexible for building web interfaces.",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test && pnpm run test:e2e",
    "test:e2e": "playwright test",
    "format": "prettier --write \"**/*.{ts,html}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@changesets/cli": "^2.29.7",
    "@playwright/test": "^1.56.0",
    "@types/node": "^18.19.127",
    "axe-core": "^4.11.0",
    "globals": "^16.4.0",
    "prettier": "^3.2.5",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.16.1"
}
